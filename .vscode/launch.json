{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flutter",
      "request": "launch",
      "type": "dart",
      "program": "${workspaceFolder}/client/lib/main.dart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Node.js Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/server/index.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch with Nodemon",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/server/index.js",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Docker Node.js",
      "address": "localhost",
      "port": 9229,  // This port should match the one exposed and mapped in Docker Compose
      "localRoot": "${workspaceFolder}/server",
      "remoteRoot": "/app",
      "protocol": "inspector",
      "restart": true,
      "skipFiles": ["<node_internals>/**"],
      "internalConsoleOptions": "neverOpen"
    }    
  ]
}
